{
  "name": "shell-aliases",
  "module": "main.ts",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "bun build --target=node ./prepare.ts --outfile=dist/prepare.js && bun build --target=node ./main.ts --outfile=dist/main.js && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "postbuild": "rimraf tsconfig.types.tsbuildinfo",
    "postinstall": "bun run ./prepare.js"
  },
  "bin": {
    "aliases": "./main.ts"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/readline-sync": "^1.4.8",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ]
}
